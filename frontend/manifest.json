{
  "manifest_version": 3,
  "name": "MixRead",
  "version": "0.1.1",
  "description": "Improve your English reading with intelligent word highlighting and definitions",
  "permissions": [
    "storage",
    "scripting",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://api.dictionaryapi.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/logger.js",
        "scripts/storage.js",
        "scripts/api-client.js",
        "scripts/stemmer.js",
        "modules/user/user-store.js",
        "modules/unknown-words/unknown-words-store.js",
        "modules/unknown-words/unknown-words-service.js",
        "modules/domain-policy/domain-policy-store.js",
        "modules/domain-policy/domain-policy-filter.js",
        "modules/domain-policy/preset-dialog.js",
        "modules/highlight/context-menu.js",
        "modules/highlight/highlight-filter.js",
        "modules/panel/batch-marking-panel.js",
        "modules/panel/word-cache-manager.js",
        "modules/panel/sidebar-panel.js",
        "content.js"
      ],
      "css": [
        "content.css",
        "modules/panel/batch-marking-panel.css",
        "modules/panel/sidebar-panel.css",
        "modules/domain-policy/preset-dialog.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MixRead"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
